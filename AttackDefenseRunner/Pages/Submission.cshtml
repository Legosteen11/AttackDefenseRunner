@page
@model SubmissionModel
@{
    ViewData["Title"] = "Home page";
}

<h1 class="display-4">Submission</h1>
<div class="container pt-3">
    <h2>Submit docker tag:</h2>
    <form method="post">
        <div class="form-group">
                    <label for="DockerTag">Give a name for your docker image:</label>
                    <input id="DockerName" type="text" class="form-control" name="DockerName" value="" asp-for="DockerName"/>
                </div>
        <div class="form-group">
            <label for="DockerTag">Docker tag:</label>
            <input id="DockerTag" type="text" class="form-control" name="DockerTag" value="" asp-for="DockerTag"/>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div> 

